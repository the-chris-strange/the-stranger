root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 88

[index.ts]
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[*.{py,pyi}]
indent_size = 4

[*.json]
insert_final_newline = false

[.{env,env.*}]
insert_final_newline = false

[*.{yaml,yml}]
indent_size = 2
